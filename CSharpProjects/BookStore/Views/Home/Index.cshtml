@model IEnumerable<BookStore.Models.Book>
@{
    ViewData["Title"] = "فروشگاه کتاب";
}

<!-- Hero Section -->
<div class="jumbotron text-center bg-primary text-white py-5 rounded-4" style="background: linear-gradient(145deg, #1e3c72, #2a5298);">
    <h1 class="display-4"><i class="fas fa-book-open"></i> به کتاب‌فروشی خوش آمدید</h1>
    <p class="lead">بهترین کتاب‌ها، بهترین قیمت‌ها</p>
    <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-lg">
        <i class="fas fa-search"></i> مشاهده کتاب‌ها
    </a>
</div>

<h2 class="mt-5 mb-4"><i class="fas fa-star"></i> کتاب‌های پیشنهادی</h2>
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-4x text-primary mb-3"></i>
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text text-muted">نویسنده: @book.Author</p>
                    <p class="card-text fw-bold text-success">@book.Price.ToString("C")</p>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary">
                        <i class="fas fa-info-circle"></i> جزئیات
                    </a>
                </div>
            </div>
        </div>
    }
</div>
