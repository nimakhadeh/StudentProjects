@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BookStore.Models.Book>
@{
    ViewData["Title"] = "کتاب‌ها";
    var isLoggedIn = Context.Session.GetString("UserId") != null;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-books"></i> کتاب‌ها</h2>
    @if (isLoggedIn)
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> افزودن کتاب جدید
        </a>
    }
</div>

<!-- جستجو -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="عنوان یا نویسنده ..." />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> جستجو
        </button>
    </div>
</form>

<!-- نمایش کارتی -->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-4x text-primary mb-3"></i>
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">نویسنده: @item.Author</p>
                    <p class="card-text fw-bold text-success">@item.Price.ToString("C")</p>
                    <p class="card-text"><span class="badge bg-secondary">@(item.Category?.Name ?? "بدون دسته")</span></p>
                    
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-info-circle"></i> جزئیات
                    </a>
                    @if (isLoggedIn)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- صفحه‌بندی -->
<div class="row mt-4">
    <div class="col-12 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.CurrentFilter }))
    </div>
</div>
